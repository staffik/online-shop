<script>
    function goSearch()
    {
        var sb = document.getElementById("srchbar");
        var srf = document.getElementById("srch");
        var srin = document.getElementById("srchin");
        srin.value = sb.value;
        srf.submit();
    }
</script>

<ul class="w3-navbar w3-green">
    <li style="width:12.5%"><a href="/">Home</a></li>
    <li style="width:12.5%"><a href="/cart">Cart</a></li>
    <% if(user) { %>
        <% if(user == "admin") { %>
            <li style="width:12.5%"><a href="/admin">Admin</a></li>
        <% } else { %>
            <li style="width:12.5%"><a href="/account">Account</a></li>
        <% } %>
        <li style="width:12.5%"><a href="/logout">Logout</a></li>
    <% } else { %>
        <li style="width:12.5%"><a href="/login">Login</a></li>
        <li style="width:12.5%"><a href="/register">Register</a></li>
    <% } %>
    <li style="width:45%"><input type="text" id="srchbar" class="w3-input" placeholder="Search..."></li>
    <li style="width:5%"><button class="w3-btn w3-green" onclick="goSearch()">Go</button></li>
</ul>
<form method="post" id="srch" action="/">
    <input type="hidden" id="srchin" name="qstr">
</form>
